{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "DOM"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noImplicitReturns": true,
    "jsx": "react",
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "./src/types/images.d.ts"
    ],
    // For MUI
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "files": ["figma.d.ts"],
  "exclude": ["node_modules"]
}
